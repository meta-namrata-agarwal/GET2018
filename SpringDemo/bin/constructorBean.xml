<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="constructorInjection" class="com.metacube.training.constructor.TextEditor">
		<constructor-arg ref="spellchecker"></constructor-arg>
	</bean>

	<bean id="spellchecker" class="com.metacube.training.constructor.SpellChecker"></bean>
</beans>